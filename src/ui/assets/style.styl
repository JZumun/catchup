*, *:before, *:after
	box-sizing: inherit;
	margin:0;
html
	--main-background:  #051735
	--translucent-white: rgba(255,255,255,0.4)
	box-sizing: border-box
	font-family: "Trench"
	background: var(--main-background)
	color: white
input, textarea
	border: 1px solid;
	display: block;
	font: inherit;
	color: inherit;
	background:transparent;
	padding: 0.25em 0.5em;
textarea
	max-width: 100%;
	min-width: 100%;
	border 1px solid white
a
	color inherit

ol, ul
	padding 0

button, .button
	border 1px solid
	background transparent
	font inherit
	font-size: 0.75em
	line-height:1.33;
	color inherit
	padding 0 1em
	cursor pointer
	text-decoration none
	align-self start
	text-align center
button:hover, .button:hover
	box-shadow inset 0 0 0 1px var(--translucent-white), 0 0 0 1px var(--translucent-white)
